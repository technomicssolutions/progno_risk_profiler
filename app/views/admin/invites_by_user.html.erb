<div class="whole_detail_div">

	<div>
			<ul class ="nav nav-tabs">
				<%if check_admin%>
					<li><a href="/admin/dashboard"> DashBoard </a></li>
				<%end%>
				<li><a href="/users/profile"> Profile </a></li>
				<%if have_permissions(1)%>
					<li><a href="/admin/functional_admin">Functional Admins </a></li>
				<%end%>		
				<%if have_permissions(2)%>
					<li><a href="/admin/users/user_group">User Groups</a>  </li>
				<%end%>			
				<%if have_permissions(3)%>	
					<li class="active"><a href="/admin/invitations">Invitations</a>  </li>	
				<%end%>
				<%if have_permissions(4)%>	
					<li><a href="/admin/investment">Investments</a>  </li>
				<% end %>
				<%if have_permissions(5)%>	
					<li><a href="/admin/cms/faq">FAQ</a>  </li>
				<% end %>	
				<%if have_permissions(6)%>	
					<li><a href="/content">Content management</a>  </li>
				<% end %>	
			</ul>
		</div>	
		<div>
		<div class="tab-content">
			<div class="tab-pane active" id ="tab1" >
				<div class="index_contents">
					<h5>Invites sent by <%=@user.email%></h5>
					<span class=" badge badge-info">Points via invitation : <%= @user.user_points ? @user.user_points : 0 %></span>
					<div style="padding-top:10px;"></div>
					<div class="span10 well">
						<div class = "table_div">
							<table cellpadding="0" cellspacing="0" border="1" class="table table-striped table-bordered" id="example" width="900px;">
								<thead>
									<tr>						   
						        <th style="width: 33%"><h6>Invitation sent to</h6></th> 
						        <th style="width: 33%"><h6>Invitation sent at</h6></th>
						        <th style="width: 33%"><h6>Status</h6></th>
						      </tr>
						    </thead>
						    <tbody>
							 		<% @total_invites.each do |invite| %>
							 			<tr>
							        <td><%= invite[0] %> </td>
							        <td><%= invite[1]%> </td>
							        <td><%= invite[2]%> </td>
							      </tr>
							    <%end%>  
						    </tbody>	
						  </table>  
						</div>	
					<%= button_to "Back", admin_invitations_path, :method=>"get"%>
					</div>
				</div>	
			</div>
		</div>
	</div>			
</div>					