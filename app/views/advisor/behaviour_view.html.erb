<div>
	<% if @answers.blank? %>
	<!-- if questions are not answered -->
		<div id="advisor_behavior_questions">
			<%= button_to "Answer Questions", advisor_behaviour_edit_path, remote:true, method:'get', class:'btn btn-success' %>
		</div>
	<% else%>
		<!-- show the answers submitted for the user -->
		<div id="advisor_behavior_questions">
			<div class=" badge badge-info" style="margin:30px;">
				Behavior Score : <%= @score %>
			</div>
			<table class="table table-striped table-bordered">
				<% @answers.each do |answer| %>
				<thead>
					<tr>
						<th colspan="2" rowspan="" headers="" scope="">Question</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td colspan="2" rowspan="" headers=""><%= answer[0].html_safe %></td>
					</tr>
					<tr>
						<th>Answer</th>
						<td><%= answer[1] %></td>
					</tr>
				</tbody>
				<% end -%>
			</table>
		<%= button_to "Re-Submit", advisor_behaviour_edit_path, remote:true, method:'get', class:'btn btn-success' %>
	<% end %>
	</div>
</div>