<table class="table table-striped table-bordered">
	<thead>
		<tr>
			<th>Composition</th>
			<th>Time Horizon</th>
			<th>Risk</th>
			<th>Return</th>
			<th>Sharpe Ratio</th>
			<th>Risk free ratio</th>
			<th>Utility</th>
			<th>Risk Penalty</th>
		</tr>
	</thead>
	<tbody>
		<% @user.each do |user| %>
			<tr>
				<td><%= display_composition(user.composition) %></td>
				<td><%= user.time_horizon %></td>
				<td><%= user.risk %></td>
				<td><%= user.return %></td>
				<td><%= user.sharpe_ratio %></td>
				<td><%= user.risk_free_ratio %></td>
				<td><%= user.utility %></td>
				<td><%= user.risk_penalty %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<%= button_to "Back", advisor_path, class:"btn btn-success" %>