<div id="rolling_time_period">

</div>

<%= set_rolling_time_period %>

<div id="rolling_period_index">
	<table class="table table-striped table-condensed table-hover">
		<thead>
			<tr>
				<th>Asset Allocation Id</th>
				<th> Rolling Period Added</th>
				<th>Data Unit</th>
				<th>No of Return Units</th>
				<th>Start Date</th>
				<th>End Date</th>
				<th>Action</th>
				<th>Download</th>
				<th>Update</th>
			</tr>
		</thead>
		<tbody>
			<% @rolling_time_period.each do |time_period| %>
				<tr>
					<td><%= name = asset_allocation(time_period) %></td>
					<td><%= time_period.rolling_period_added %></td>
					<td><%= time_period.data_unit %></td>
					<td><%= time_period.return_units_no %></td>
					<td><%= time_period.start_date %></td>
					<td><%= time_period.end_date %></td>
					<td><%= edit_rolling_time_period(time_period) %> | <%=delete_rolling_time_period(time_period)  %> </td>
					<td><%= download_data(time_period,name) %></td>
					<td><%=update_view_matrics(time_period)%></td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>