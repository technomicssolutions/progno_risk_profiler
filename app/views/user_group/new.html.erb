<div class="whole_detail_div">

	<div>
			<ul class ="nav nav-tabs">
				<%if check_admin%>
					<li><a href="/admin/dashboard"> DashBoard </a></li>
				<%end%>	
				<li><a href="/users/profile"> Profile </a></li>
				<%if have_permissions(1)%>
					<li><a href="/admin/functional_admin">Functional Admins </a></li>
				<%end%>	
				<%if have_permissions(2)%>	
					<li class="active"><a href="/admin/users/user_group">User Groups</a>  </li>
				<%end%>		
				<%if have_permissions(3)%>	
					<li><a href="/admin/invitations">Invitations</a>  </li>	
				<%end%>
				<%if have_permissions(4)%>	
					<li><a href="/admin/investment">Investments</a>  </li>
				<% end %>
				<%if have_permissions(5)%>	
					<li><a href="/admin/cms/faq">FAQ</a>  </li>
				<% end %>	
				<%if have_permissions(6)%>	
					<li><a href="/content">Content management</a>  </li>
				<% end %>	
			</ul>
		</div>	
		<div>
			</ul>
			<div class="index_contents">
				<div class="span10 well">
					<%= form_for @group, :url=>{:action=>"create"}, :method=>"post" do |f| %>
						<div>
							<%=f.label :name, "Group Name"%>
							<%=f.text_field :name%>
						</div>


						<div>
							<h6>Mark abilities :</h6>
							<%@abilities.each do |ability|%>
								<%= check_box_tag 'abilities[]', ability.id %>
					        <%= ability.name %> - <%=ability.remark%>
					        <br><br>
					     <%end%>
					  </div>
					  <%=f.submit%>
					<%end%>    
				</div>
			</div>
		</div>
	</div>			
</div>					
	