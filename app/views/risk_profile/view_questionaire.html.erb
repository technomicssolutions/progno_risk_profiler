<div>
  <ul class="nav nav-tabs">
    <li><a href="/admin/risk_profile/set_questions" >Set Questions</a></li>
    <li><a href="/admin/risk_profile/sequence_change" >Sequence Change</a></li>
    <li class="active"><a href="/admin/risk_profile/view_questionaire" >View Questionaire</a></li>
  </ul>
</div>



<div class="content_div">
  <div id="risk_profile_trial_questionaire_results">
  </div>
    <div class="risk_profile_trial_questionaire">
      <%= form_tag({:action => 'view_report'}, remote: true) do %>
        <% @survey.each do |s| %>
          <% s.risk_questions.order(:position).each do |questions| %>
             <div class="questions_trial">
                <li id="trial_question"><%= questions.risk_question.html_safe %></li>
                <% questions.risk_question_options.each do |options| %>
                  <% if options.option_name.nil? %>
                    <li id="trial_option"> &nbsp;</li>
                  <% else %>
                    <li id="trial_option">
                      <%= options.option_name %>
                    </li>
                  <% end %>
                  <li id="trial_option">
                    <%= radio_button_tag questions.id, options.id%>
                  </li>
                  <br>
                <% end %>
              </div> <!-- close div for questions -->
              <br>
            <% end %>
            <br>
          <% end %>
        <%= submit_tag "Submit", :disable_with => 'Submiting...' %>
      <% end -%>
    </div>
  </div>
