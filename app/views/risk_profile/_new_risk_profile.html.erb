<%= form_for @risk_profile, :url => {:action => 'save_risk_profile'}, :method => 'post' do |f| -%>
		<div class="field">
	  	<%= f.label :name, "Name" %>
	  	<%= f.text_field :risk_profile_name,placeholder:"Risk Profile Name" %>
	  </div>
	  <div class="left">
	  	<%= f.label :from_mark, "From Mark" %>
	  	<%= f.text_field :from_mark, placeholder:"staring range" %>
	  </div>
	  <div class="right">
	  	<%= f.label :to_mark, "To Mark" %>
	  	<%= f.text_field :to_mark, placeholder:"end range" %>
	  </div>
	  <div class="field">
	  	<%= f.submit "Submit", :disable_with => 'Submiting...' %>
	  </div>
	<% end -%>